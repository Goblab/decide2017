<div class="candidate-view">
<div class="meta">
	{{#if model.candidate.avatar.url}}
	<div class="candidate-image">
		<img src="{{model.candidate.avatar.url}}"/>
	</div>
	{{/if}}

	<div class="content">
		<h2>{{model.candidate.name}}</h2>
		<h3>{{model.candidate.position.name}}</h3>
		<span>{{model.candidate.alliance.name}}</span>
	</div>
	<div class="social">
		<a href="{{model.candidate.facebook}}" target="_blank" class="ui circular facebook icon button">
		  <i class="facebook icon"></i>
		</a>
		<a href="{{model.candidate.twitter}}" target="_blank" class="ui circular twitter icon button">
		  <i class="twitter icon"></i>
		</a>
	</div>
	<div class="bio">
		<p>
			{{model.candidate.bio}}
		</p>
	</div>
</div>

<ul class="candidate-answers">
	{{#each model.answers as |answer|}}
		<li class="item">
		  <span>{{answer.question.category.name}}</span> 
		  <h2>{{answer.question.title}}</h2> 
		  <div class="item-answer">
		    <label>Respuesta del candidato: {{answer.response}}</label>		    
		  </div> 
		  <div class="item-comment">
		    <label style="font-weight: 600;margin: 5px 0;display: block;">Justificaci√≥n</label>
		    <p class="{{answer.dummy}}">{{answer.comment}}</p>
		  </div>
		</li>
	{{/each}}
</ul>
</div>