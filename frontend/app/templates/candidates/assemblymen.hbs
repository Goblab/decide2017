<div class="candidates">
	<h2 class="ui header dividing -flex">
	    Asambleistas
	 </h2>	
	<div class="candidates-list" id="candidates-list">
		{{#each model as |candidate|}}
			<div class="item"> 
				<div class="image">
				  <img src="{{candidate.avatar.url}}">
				</div>
				<div class="content">
					<h2 class="header">
						{{candidate.name}} 
					</h2>
					<div class="description">
						<p>{{candidate.alliance.name}}</p>
					</div>
				</div>
				<div class="action">
					{{#link-to "candidates.view" candidate.id class="ui tiny button inverted red"}} 
						Ver candidato
					{{/link-to}}
				</div>
			</div>
		{{/each}}
		{{load-more infinityModel=model action='infinityLoad'}}
	</div>
</div>
